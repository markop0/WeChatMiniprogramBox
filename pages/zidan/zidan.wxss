.index-swiper {
    position: relative;
    margin: 20rpx 0 18rpx 0;
    background-color: white;
    width:702rpx;
    height: 88rpx;
    margin-left:24rpx;
    border-radius: 8rpx;
}
.index-swiper::after {
  content:' ';
  position: absolute;
  top:0;
  bottom: 0;
  left:0;
  right:0;

} 

.index-swiper-icon {
    position: absolute;
    top:22rpx;
    left: 40rpx;
    width: 48rpx;
    height: 48rpx;
}

.index-swiper-content {
    margin-left: 128rpx;
    font-size: 26rpx;
    height: 70rpx;
    line-height: 70rpx;
}
.index-swiper-content-term{
  margin-top:9rpx; 
}
.index-swiper-content-term>text:first-of-type {
    padding: 4rpx 12rpx;
    margin-right: 18rpx;
    color: #333;   
}
