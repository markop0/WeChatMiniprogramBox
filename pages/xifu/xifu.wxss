.container {
    background: #eee;
    width: 100vw;
    height: 2000px;
    margin: 0 auto;
    font-size: 30px;
    text-align: center;
    color: #fff;
    line-height: 60px;
}

.cell {
    position: -webkit-sticky;
    position: sticky;
    width: 100%;
    height: 60px;
    margin-bottom: 30px;
    background: #ff7300;
    top: 0px;
}