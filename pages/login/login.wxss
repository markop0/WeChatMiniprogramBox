/* pages/login/login.wxss */
.wrapper{
  background: #a7d8fb;
  height: 100vh;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.logo{
  text-align: center;
  padding: 30px 0 ;
}
.logo image{
  width: 80px;
  height: 80px;
}
.form{
  padding: 0 12%;
}
.form view{
  background: #fff;
  border-radius: 4px;
  margin: 0 0 20px;
}
.form input{
  border-bottom: 1px #efefef solid;
  height: 50px;
  line-height: 50px;
  padding: 0 24px;
}
.form input:last-child {
  border-bottom: none;
}
.login{
  background: rgba(0, 0, 0, .1);
  color: #fff;
}
.footer{
  text-align: center;
  margin: 30px auto;
  color: #fff;
}